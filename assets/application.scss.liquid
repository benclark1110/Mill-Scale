{% comment %} -------------- PRODUCTS PAGE -------------- {% endcomment %}

.collection{
  display: flex;
  flex-wrap: wrap;
}

.collection > div {
  flex: 1;
}

.collection > div > div{
  display: block;
  text-align: center;
  padding-bottom: 2%;
}

.productBorder {
  background-color: #1F1F1F;
  border-top-style: solid;
  margin: 0 15% 0 15%;
  position:relative;
  bottom: 30px;
}

.row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  flex-basis: 100%;
}

.column {
  display: flex;
  flex-direction: column;
  flex-basis: 100%;
  flex: 1;
}

.rowItem {
  align-items: center
}

@media(min-width: 800px) {
  .rowItem {
      display: flex;
  }
}

.columnItem {
  flex: 1;
  padding: 0 5% 5% 5%;
  line-height: 200%;
  font-size: 175%;
  line-height: auto;
  font-size: auto;
}

.outStory {
  color: #B39457;
}

.dropbtn {
  padding: 16px;
  font-size: 16px;
  border: none;
  cursor: pointer;
}

.outline {
  -webkit-text-stroke: .1px;
  -webkit-text-fill-color: #1F1F1F;
}

.topnav a {
  float: left;
  display: block;
  color: #FFECD1;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav .icon {
  display: none;
}

{% comment %} -------------- CONTACT PAGE -------------- {% endcomment %}

.contactPage{
  align-items: flex-start;
}

.contactInfo {
  color: #B39457;
  line-height: 80%;
}

.contactInfo > h3, .contactLabel {
  color: #B39457;
}

.contactInfo > p {
  color: #FFECD1;
}

.contactForm {
  background-color: #1F1F1F;
  border-top-style: solid;
}

.contactForm > h1 {
  color: #B39457;
}

.contact-form > input, .contact-form > textarea{
  background-color: #1F1F1F;
}

.contact-form > input {
  border-bottom-style: solid;
  border-top-style: none;
  border-left-style: none;
  border-right-style: none;
  border-color: #B39457;
}

#ContactFormFirstName, #ContactFormLastName {
  width: 48%;
}

#ContactFormEmail, #ContactFormSubject {
  width: 98%;
}

::placeholder {
  color: #B39457;
}

.inline {
  display: inline;
}

#MessageText {
  display: block;
}

#ContactFormMessage {
  border-style: solid;
  border-color: #B39457;
  width: 98%;
}

#ContactSend {
  border-style: solid;
  border-color: #B39457;
  color: #B39457;
  padding: 2% 10% 2% 10%;
}

{% comment %} -------------- DROPDOWN -------------- {% endcomment %}

.dropdown {
  float: left;
  overflow: hidden;
}

.dropdown .dropbtn {
  font-size: 17px;    
  border: none;
  outline: none;
  color: #FFECD1;
  padding: 14px 16px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #FFECD1;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  float: none;
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
}

.topnav a:hover, .dropdown:hover .dropbtn {
  background-color: #555;
  color: white;
}

.dropdown-content a:hover {
  background-color: #ddd;
  color: black;
}

.dropdown:hover .dropdown-content {
  display: block;
}

{% comment %} -------------- MEDIA -------------- {% endcomment %}

@media screen and (max-width: 600px) {
  .topnav {
    width: 100%
  }
  
  .topnav a:not(.active), .dropdown .dropbtn {
    display: none;
  }
  .topnav a.icon {
    float: right;
    display: block;
  }

  .topnav.responsive {
    position: relative;
  }

  .topnav.responsive .icon {
    position: absolute;
    right: 0;
    top: 0;
  }

  .topnav.responsive a {
    float: none;
    display: block;
    text-align: left;
  }

  .topnav.responsive .dropdown {
    float: none;
  }

  .topnav.responsive .dropdown-content {
    position: relative;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .topnav.responsive .dropdown .dropbtn {
    display: block;
    width: 100%;
    text-align: left;
  }
  .footerSecond {
      display: none;
  }

  .topnav.responsive .active img {
    width: auto;
    height: 100%
  }
}