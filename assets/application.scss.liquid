html, body {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #191818;
  color: #FFECD1
}

main {
  flex: 1 0 auto;
}

.testing {
  display: flex;
  justify-content: center;
}

.testing {
    a {
        margin: 10px;
        padding: 20px;
        font-size: 30px;
    }
}

a {
  text-decoration: none;
  color: #FFECD1
}

header {
  display: flex;
  flex-shrink: 0;
  background-color: #191818;
  margin-right: 10%;
  margin-left: 10%;
}

footer {
  display: flex;
  flex-shrink: 0;
  background-color: #191818;
  margin: 3%;
}

footer > div{
  flex-grow: 1;
  flex-basis: 33%;
  height: 100px;
  display: block;
  justify-content: center;
  flex: 1;
}

footer > div > div{
  display: block;
  padding-bottom: 2%;
}

.collection{
    display: flex;
    flex-wrap: wrap;
}
 
.popular{
    display: flex;
    flex-wrap: wrap;
}

.popular > div {
    flex: 1;
}

.popular > div > div{
    display: block;
    text-align: center;
    padding-bottom: 2%;
}

.popularBorder {
    margin: 0 30% 30% 30%;
    border-style: solid;
}

.smokerLogo {
  background-color: #FFECD1;
  color: #191818;
  text-align: center;
}

.smokerLogo > div > p {
  margin-top: 50%;
}

.smokerLogo > div > a {
  color: #191818;
  border-style: solid;
  margin: 0 30% 3% 30%;
}

.smokerIcon{
  padding: 5%
}

.collection{
    display: flex;
    flex-wrap: wrap;
}

.collection > div {
    flex: 1;
}

.collection > div > div{
    display: block;
    text-align: center;
    padding-bottom: 2%;
}

.productBorder {
    border-top-style: solid;
}

.row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  flex-basis: 100%;
}

.column {
  display: flex;
  flex-direction: column;
  flex-basis: 100%;
  flex: 1;
}

@media(min-width: 800px) {
    .rowItem {
        display: flex;
    }
}

@media(max-width: 600px) {
    .footerSecond {
      display: none;
    }
}

.columnItem {
    flex: 1
}

.dropbtn {
  padding: 16px;
  font-size: 16px;
  border: none;
  cursor: pointer;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {background-color: #f1f1f1}

.dropdown:hover .dropdown-content {
  display: block;
}

.outline {
  -webkit-text-stroke: 1px;
  -webkit-text-fill-color: #1F1F1F;
}

