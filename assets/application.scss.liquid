html, body {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: url("Background.png");
  color: #FFECD1;
  font-family: 'Work Sans', sans-serif;
}

main {
  flex: 1 0 auto;
}

a {
  text-decoration: none;
  color: #FFECD1
}

header {
  display: flex;
  width: 100%;
  justify-content: center;
}

footer {
  display: flex;
  flex-shrink: 0;
  margin: 3%;
}

footer > div{
  flex-grow: 1;
  flex-basis: 33%;
  height: 100px;
  display: block;
  justify-content: center;
  flex: 1;
}

footer > div > div{
  display: block;
  padding: 0 0 2% 30%;
}

.questions a{
  position:relative;
  top: 30%;
  color: #B39457;
  font-weight: 900;
  font-size: 140%;
}

.collection{
  display: flex;
  flex-wrap: wrap;
}
 
.popular{
  display: flex;
  flex-wrap: wrap;
}

.popular > div {
  flex: 1;
}

.popular > div > div{
  display: block;
  text-align: center;
  padding-bottom: 2%;
}

.popularBorder {
  margin: 0 30% 30% 30%;
  border-style: solid;
}

.popularBorder a{
  position:relative;
  top: 4px;
}

.smokerLogo {
  background-color: #FFECD1;
  color: #191818;
  text-align: center;
}

.smokerLogo > div > p {
  margin-top: 50%;
}

.smokerLogo > div > a {
  color: #191818;
  border-style: solid;
  margin: 0 30% 3% 30%;
}

.smokerIcon{
  padding: 5%
}

.collection{
  display: flex;
  flex-wrap: wrap;
}

.collection > div {
  flex: 1;
}

.collection > div > div{
  display: block;
  text-align: center;
  padding-bottom: 2%;
}

.productBorder {
  background-color: #1F1F1F;
  border-top-style: solid;
  margin: 0 15% 0 15%;
  position:relative;
  bottom: 30px;
}

.row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  flex-basis: 100%;
}

.column {
  display: flex;
  flex-direction: column;
  flex-basis: 100%;
  flex: 1;
}

@media(min-width: 800px) {
  .rowItem {
      display: flex;
  }
}

.columnItem {
    flex: 1
}

.dropbtn {
  padding: 16px;
  font-size: 16px;
  border: none;
  cursor: pointer;
}

.outline {
  -webkit-text-stroke: .1px;
  -webkit-text-fill-color: #1F1F1F;
}

.topnav a {
  float: left;
  display: block;
  color: #FFECD1;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav .icon {
  display: none;
}

.dropdown {
  float: left;
  overflow: hidden;
}

.dropdown .dropbtn {
  font-size: 17px;    
  border: none;
  outline: none;
  color: #FFECD1;
  padding: 14px 16px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #FFECD1;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  float: none;
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
}

.topnav a:hover, .dropdown:hover .dropbtn {
  background-color: #555;
  color: white;
}

.dropdown-content a:hover {
  background-color: #ddd;
  color: black;
}

.dropdown:hover .dropdown-content {
  display: block;
}

@media screen and (max-width: 600px) {
  .topnav {
    width: 100%
  }
  
  .topnav a:not(.active), .dropdown .dropbtn {
    display: none;
  }
  .topnav a.icon {
    float: right;
    display: block;
  }

  .topnav.responsive {
    position: relative;
  }

  .topnav.responsive .icon {
    position: absolute;
    right: 0;
    top: 0;
  }

  .topnav.responsive a {
    float: none;
    display: block;
    text-align: left;
  }

  .topnav.responsive .dropdown {
    float: none;
  }

  .topnav.responsive .dropdown-content {
    position: relative;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .topnav.responsive .dropdown .dropbtn {
    display: block;
    width: 100%;
    text-align: left;
  }
  .footerSecond {
      display: none;
  }

  .topnav.responsive .active img {
    width: auto;
    height: auto;
  }
}