  flex-direction: column;
  flex-basis: 100%;
  flex: 1;
}

.cartBreak {
  border-color: #B39457;
}

.cartColumn {
  padding: 2%;
}

.cartColumn > h1, .productPage, .productPricing, .popularBorder {
