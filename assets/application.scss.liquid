html, body {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #191818;
  color: #FFECD1
}

main {
  flex: 1 0 auto;
}

.testing {
  display: flex;
  justify-content: center;
}

.testing {
    a {
        margin: 10px;
        padding: 20px;
        font-size: 30px;
    }
}

a {
  text-decoration: none;
  color: #FFECD1
}

header {
  display: flex;
  flex-shrink: 0;
  background-color: #191818;
  margin-right: 10%;
  margin-left: 10%;
}

footer {
  display: flex;
  flex-shrink: 0;
  background-color: #191818;
  margin-right: 10%;
  margin-left: 10%;
}

footer > div{
  flex-grow: 1;
  width: 33%;
  height: 100px;
  display: block;
  justify-content: center;
}

footer > div > div{
  display: block;
  padding-bottom: 2%;
}

.collection{
    display: flex;
    flex-wrap: wrap;
}
 
.popular{
    display: flex;
    flex-wrap: wrap;
}

.popular > div {
    flex: 1;
}

.popular > div > div{
    display: block;
    text-align: center;
    padding-bottom: 2%;
}

.border {
    margin: 0 30% 30% 30%;
    border-style: solid
}

.smokerLogo {
  background-color: #FFECD1;
  color: #191818;
  text-align: center;
}