{% comment %} -------------- DROPDOWN -------------- {% endcomment %}

.dropdown {
  float: left;
  overflow: hidden;
  text-align: center;
}

.dropdown .dropbtn {
  font-size: 17px;    
  border: none;
  outline: none;
  color: #FFECD1;
  padding: 14px 16px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #FFECD1;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  float: none;
  color: #FFECD1;;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
  display: inline;
}

.topnav a:hover, .dropdown:hover .dropbtn {
  border-top-style: solid;
  {% comment %} color: white; {% endcomment %}
}

.dropdown-content a:hover {
  {% comment %} background-color: #ddd; {% endcomment %}
  color: #B39457;
  border: none;
  justify-content: space-between;
}

.dropdown:hover .dropdown-content {
  display: block;
  width: -webkit-fill-available;
  display: flex;
  justify-content: space-around;
}

.dropdownImage {
  position: relative;
  text-align: center;
}



.dropdown-content > .dropdownImage {
  display: inline;
}

