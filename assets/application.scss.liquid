html, body {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: url("Background.png");
  color: #FFECD1;
  font-family: 'Work Sans', sans-serif;
}

h1, h2, h3, a, p, input, label, textarea {
  font-family: 'Work Sans', sans-serif;
}

input, textarea {
  color: #FFECD1;
}

main {
  flex: 1 0 auto;
  margin-top: 130px;
}

a {
  text-decoration: none;
  color: #FFECD1
}

header {
  z-index: 1;
}

header > div{
  display: flex;
  flex-shrink: 0;
  margin: 3%;
}

header > div > div, header > div > a {
  flex-grow: 1;
  flex-basis: 33%;
  height: 100px;
  display: block;
  justify-content: center;
  flex: 1;
}

.insta {
  filter: invert(95%) sepia(9%) saturate(1355%) hue-rotate(313deg) brightness(103%) contrast(103%);
}

.heroBorder {
  background-color: #1F1F1F;
  border-top-style: solid;
  margin: 0 20% 0 20%;
  position:absolute;
  bottom: -80px;
  padding-bottom: 1.5%;
  text-align: center;
}

footer {
  display: flex;
  flex-shrink: 0;
  margin: 3%;
}

footer > div{
  flex-grow: 1;
  flex-basis: 33%;
  height: 100px;
  display: block;
  justify-content: center;
  flex: 1;
}

footer > div > div{
  display: block;
  padding: 0 0 2% 30%;
}

.questions a {
  position:relative;
  top: 30%;
  color: #B39457;
  font-weight: 900;
  font-size: 140%;
}

.collectionHeadings {
  margin-left: 2%;
  margin-right: 2%;
}

.collection{
  display: flex;
  flex-wrap: wrap;
}
 
.popular{
  display: flex;
  flex-wrap: wrap;
}

.popular > div {
  flex: 1;
}

.popular > div > div{
  display: block;
  text-align: center;
  padding-bottom: 2%;
}

.popularBorder {
  margin: 0 30% 30% 30%;
  border-style: solid;
}

.popularBorder a{
  position:relative;
  top: 4px;
}

.smokerLogo {
  background-color: #FFECD1;
  color: #191818;
  text-align: center;
}

.smokerLogo > div > p {
  margin-top: 50%;
}

.smokerLogo > div > a {
  color: #191818;
  border-style: solid;
  margin: 0 30% 3% 30%;
}

.smokerIcon{
  padding: 5%
}

