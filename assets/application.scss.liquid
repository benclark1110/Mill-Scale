.contactPage{
  align-items: flex-start;
}

.contactInfo {
  color: #B39457;
  line-height: 80%;
}

.contactInfo > h3, .contactLabel {
  color: #B39457;
}

.contactInfo > p {
  color: #FFECD1;
}

.contactForm {
  line-height: 150%;
  padding-bottom: 1.1%
}

.contactForm, .cartColumn, .productColumn {
