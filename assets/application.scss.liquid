#ContactSend, #CartCheckout, #AddToCart, .heroDetails, .productVariants {
  background-color: #1F1F1F;
  border-style: solid;
  border-width: thin;
  border-color: #B39457;
  color: #B39457;
  padding: 2% 10% 2% 10%;
}

.heroImageButton {
  border: none;
  background-color: #1F1F1F;
  color: #B39457;
  padding: 2% 10% 2% 10%;
}

{% comment %} -------------- DROPDOWN -------------- {% endcomment %}

.dropdown {
  float: left;
  overflow: hidden;
  text-align: center;
}

.dropdown .dropbtn {
  font-size: 17px;    
  border: none;
  outline: none;
  color: #FFECD1;
  padding: 14px 16px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
  padding-top: 0;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #FFECD1;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  right: .15%;
  padding-right: 1%;
  margin-right: -.2%;
}

.dropdown-content a {
  float: none;
  color: #FFECD1;;
  text-decoration: none;
  display: block;
  text-align: left;
  display: inline;
}

.topnav a:hover:not(.navHover), .dropdown:hover .dropbtn {
  border-bottom-style: solid;
  {% comment %} color: white; {% endcomment %}
}

.dropdown-content a:hover {
  {% comment %} background-color: #ddd; {% endcomment %}
  color: #B39457;
  border: none;
  justify-content: space-between;
}

.dropdown:hover .dropdown-content {
  display: block;
  width: -webkit-fill-available;
  display: flex;
  justify-content: space-around;
  top: 70%;
}

{% comment %} .dropdown:hover .topnav {
  margin-top: 0;
  padding-top: 3%;
  background-color: #FFECD1;
} {% endcomment %}

.dropdownImage {
  position: relative;
  text-align: center;
  padding: 1% 0 .5% 1%;
}

.dropdown-content > .dropdownImage {
  display: inline;
}

.headerImage {
  width: 100%;
  height: auto;
}

.hide {
  padding: 0;
}

