{% comment %} -------------- PRODUCTS PAGE -------------- {% endcomment %}

.collection{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.collection > div {
  flex: 0;
}

.collection > div > div{
  display: block;
  text-align: center;
  padding-bottom: 2%;
}

.productBorder {
  background-color: #1F1F1F;
  border-top-style: solid;
  margin: 0 15% 0 15%;
  position:relative;
  bottom: 30px;
}

.row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  flex-basis: 100%;
}

.column {
  display: flex;
  flex-direction: column;
  flex-basis: 100%;
  flex: 1;
}

.cartBreak {
  border-color: #B39457;
}

.cartColumn {
  padding: 2%;
}

.cartColumn > h1, .productPage, .productPricing, .popularBorder {
  color: #B39457;
}

.productRow{
  margin-top: 25px;
}

.cartImage{
  width: 100%;
  height: auto;
}

.subtotal{
  display : flex;
} 

.dot{
  flex: 1;
  border-bottom: 2.5px dotted #FFECD1;
  height: .75em;
}

