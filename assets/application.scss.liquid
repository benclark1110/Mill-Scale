@font-face {
  font-family: "UnitedSans";
  src: url("UnitedSansSmExBd.woff2") format("woff2"),
       url("UnitedSansSmExBd.woff") format("woff");
}  


html, body {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: url("Background2.png");
  color: #FFECD1;
  font-family: 'UnitedSans', sans-serif;
}

h1, h2, h3, a, p, input, label, textarea {
  font-family: 'UnitedSans', sans-serif;
}

.united, .heroDetails {
  font-family: 'Work Sans', sans-serif;
}

input, textarea {
  color: #FFECD1;
}

main {
  flex: 1 0 auto;
  margin-top: 130px;
}

a {
  text-decoration: none;
  color: #FFECD1
}

header {
  z-index: 1;
}

header > div{
  display: flex;
  flex-shrink: 0;
  margin: 3%;
}

header > div > div, header > div > a {
  flex-grow: 1;
  flex-basis: 33%;
  height: 100px;
  display: block;
  justify-content: center;
  flex: 1;
}

.insta {
  filter: invert(95%) sepia(9%) saturate(1355%) hue-rotate(313deg) brightness(103%) contrast(103%);
}

.heroImage {
  margin-left: 3%;
  margin-right: 3%;
}

.heroImageSwitch {
  background-color: #1F1F1F;
  border-bottom-style: solid;
  position:absolute;
  bottom: 26%;
  right: 94.2%;
  padding: .1% 1% 2% 1%;
  width: 7%;
  height: 42%
}

.heroHeaderSideText {
    transform: rotate(270deg);
    margin-top: 140%;
}

.arrow{
  border: solid #FFECD1;
  border-width: 0 3px 3px 0;
  display: inline-block;
  padding: 3px;
}

.arrowLeft{
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
}

.arrowRight{
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.heroBorder {
  background-color: #1F1F1F;
  border-top-style: solid;
  margin: 0 20% 0 20%;
  position:absolute;
  bottom: -80px;
  padding-bottom: 5%;
  padding-left: 5%;
  padding-right: 5%;
  text-align: center;
}

.videoStoryBorder {
  background-color: #1F1F1F;
  border-top-style: solid;
  margin: 0 60% 0 0;
  position:absolute;
  padding: 0 3% 3% 3%;
  text-align: left;
  top: 34%;
}

footer {
  display: flex;
  flex-shrink: 0;
  margin: 6% 3% 6% 3%;
}

footer > div{
  flex-grow: 1;
  flex-basis: 33%;
  height: 100px;
  display: block;
  justify-content: center;
  flex: 1;
}

footer > div > div{
  display: block;
  padding: 0 0 2% 30%;
}

.questions a {
  position:relative;
  top: 30%;
  color: #B39457;
  font-weight: 900;
  font-size: 140%;
}

.collectionsHeader {
  margin: 0 3% 3% 3%;
  padding-bottom: 1%;
  border-bottom-style: solid;
  border-width: thin;
  color: #B39457;
}

.collectionTitles {
  display: inline;
  border-style: solid;
  border-width: thin;
  padding: 1% 3% 1% 3%;
  color: #B39457;
  width: -webkit-fill-available;
  margin-right: -.4%;
  {% comment %} margin-right: -.3%; {% endcomment %}
  {% comment %} margin: 0; {% endcomment %}
}

.selected {
  color: #FFECD1;
}

.collection{
  display: flex;
  flex-wrap: wrap;
}
 
.popular{
  display: flex;
  flex-wrap: wrap;
}

.popular > div {
  flex: 1;
}

.popular > div > div{
  display: block;
  text-align: center;
  padding-bottom: 2%;
}

.popularBorder {
  margin: 0 30% 30% 30%;
  border-style: solid;
  border-width: thin;
}

.popularBorder a{
  position:relative;
  top: 4px;
}

.smokerIcon{
  padding: 5%
}

{% comment %} .vimeoVideo {
  width: 80%;
  height: auto;
  float: right;
} {% endcomment %}

