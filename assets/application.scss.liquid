} {% endcomment %}

{% comment %} -------------- MEDIA -------------- {% endcomment %}

@media (min-width: 600px) {
  .centered {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}

@media screen and (max-width: 600px) {
  .topnav {
    width: 100%
  }
  
  .topnav a:not(.active), .dropdown .dropbtn, .headerImage {
    display: none;
  }

  .dropdown {
    display: contents;
  }

  .topnav a.icon {
    float: right;
    display: block;
  }

  .topnav.responsive {
    position: relative;
    flex-direction: column;
    margin: 0;
  }

  .topnav.responsive .icon {
    position: absolute;
    right: 0;
    top: 0;
  }

  .topnav.responsive a {
    float: none;
    display: block;
    text-align: left;
    width: 35%;
  }

  .topnav.responsive .dropdown {
    float: none;
  }

  .topnav.responsive .centered {
    position: relative;
  }

  .dropdown:hover .centered {
    display: block;
  }

  .topnav.responsive .dropdown .dropbtn {
    display: block;
    width: 100%;
    text-align: left;
  }

  .topnav.responsive .dropdown {
    display: block;
  }

  .topnav.responsive .dropdown-content{
    flex-direction: column;
  }

  .topnav.responsive .centered{
    color: #B39457;
  }

  .topnav.responsive .instaDiv {
    padding-top: 0;
  }

  .topnav.responsive .hide {
    display: none;
  }

  .insta {
    height: 100%;
  }

  .footer {
    margin-left: 0;
  }

  .footerSecond {
      display: none;
  }

  .topnav.responsive .active img {
    width: auto;
    height: 100%
  }

.vimeoVideo {
  width: 100%;
  height: auto;
}

  .cartCollapse {
    display: none;
  }

  .collection {
    flex-direction: column;
  }

  .collection > div {
    margin-bottom: 17%;
  }

  .productImages {
    width: 100%;
    height: auto;
  }
}

@media screen and (max-width: 600px) {
  .heroBorder {
    bottom: -40px;
  }
}



@media (min-width: 1100px) {
  main {
    margin-top: 200px;
  }
}