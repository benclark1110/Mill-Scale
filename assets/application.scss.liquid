  display: block !important;
}

.hulkapps_check_option {
  color: #FFECD1;
}

#option_total {
  display: none !important;
}

.transitionbutton {
  position: relative;
  overflow:hidden;
  background: none;
  cursor: pointer;
  background-color: #1F1F1F;
  border-style: solid;
  border-width: thin;
  border-color: #B39457;
  color: #B39457;
  padding: 2% 10% 2% 10%;
  opacity: .99;
  -webkit-transition: 0.1s ease-in;
}

.fill:hover:before {
  top: 0;
}

.fill:hover {
  color: #FFECD1 !important;
  opacity: 1;
  background-color: #B39457;
}

.fill:before {
  content: "";
  position: absolute;
  background: #B39457;
  background-color: #B39457;
  bottom: 0;
  left: 0;
  right: 0;
  top: 100%;
  z-index: -1;
  -webkit-transition: 0.1s ease-in;
}

