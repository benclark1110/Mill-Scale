<!doctype html>

<html>

<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'application.scss.css' | asset_url | stylesheet_tag }}
  {{ 'application.js' | asset_url | script_tag }}
</head>


<body>
  <header>
    <div class="testing">
      {% for link in linklists.main-menu.links %}
        {% assign child_list_handle = link.title | handleize %}
        {% if linklists[child_list_handle].links != blank %}
        <div class="dropdown">
          <button  class="dropbtn">{{ link.title }}>></button>
          <div class="dropdown-content">
            {% for childlink in linklists[child_list_handle].links %}
              <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
            {% endfor %}
          </div>
        {% else %}
        </div>
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endif %}
      {% endfor %}
      <a href="https://mill-scale.myshopify.com/">
          <img src="//cdn.shopify.com/s/files/1/0467/0049/5015/t/5/assets/Millscale_Logo.svg?v=6894437122249099180" width="70%" height="70%">
      </a>
      <a href="https://mill-scale.myshopify.com/pages/giving-back">Giving Back</a>
      <a href="/cart">Cart</a>
      <a href="https://www.instagram.com/mill.scale/?hl=en" class="insta">
          <img src="//cdn.shopify.com/s/files/1/0467/0049/5015/t/5/assets/Instagram.svg?v=5887350605039175117" width="70%" height="70%" class="insta">
      </a>
    </div>
  </header>



  {% if shop.customer_accounts_enabled %}
    {% if customer %}
      <a href="/account">account</a>
      {{ 'log out'  | customer_logout_link }}
    {% else %}
      {{ 'log in ' | customer_login_link }}
      {{ 'register' | customer_register_link }}
    {% endif %}
  {% endif %}

  <main role="main">
    {{ content_for_layout }}
    {% if template == 'index' %}
    {% comment %} {{ 'home-image.png' | asset_url }} {% endcomment %}
    <div>
      <img src="//cdn.shopify.com/s/files/1/0467/0049/5015/t/5/assets/home-image.png?v=54031112577287740" width="100%" height="80%">
    </div>
    <div>
      <h1 class="outline">POPULAR ITEMS</h1>
    </div>
    <div class='popular'>
        {%  assign collection2 = collections["Popular-Items"] %}
        {% for product in collection2.products %}
          <div> 
            <div>
              <a href="{{ product.url | within: collection }}">
                  <img src="{{ product.featured_image.src | img_url: 'medium' }}" alt="{{ product.featured_image.alt | escape }}">
              </a>
            </div>
            <div>
              {{ product.title }}
            </div>
            <div class="popularBorder">
              <a href="{{ product.url | within: collection }}">
                  See Details
              </a>
            </div>
          </div>
        {% endfor %}
    </div>
    <div class="smokerLogo">
      <img src="//cdn.shopify.com/s/files/1/0467/0049/5015/t/5/assets/Smoker.svg?v=15562615337445288316" width="50%" height="50%">
      Whether you need a smoker on skids to put in a pit room, or one that can be taken on the road to cook anywhere, weâ€™ve got you covered
    </div>
    {% endif %}
  </main>


  <footer class="footer">
    <div>
      <a href="https://mill-scale.myshopify.com/">
        <img src="//cdn.shopify.com/s/files/1/0467/0049/5015/t/5/assets/Footer_Icon.svg?v=18218190162933745886" width="70%" height="70%">
      </a>
    </div>
    <div>
      <a href="https://mill-scale.myshopify.com/pages/contact">
      Got Questions?
      </a>
    </div>
    <div class="footerSecond">
      {% for link in linklists.footer.links %}
        <div>
        {% assign child_list_handle = link.title | handleize %}
        {% if linklists[child_list_handle].links != blank %}
          <a href="{{ link.url }}">{{ link.title }}</a>
          [{% for childlink in linklists[child_list_handle].links %}
            <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
          {% endfor %}]
        {% else %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endif %}
        </div>
      {% endfor %}
      <div>
        <a href="https://mill-scale.myshopify.com/pages/giving-back">Giving Back</a>
      </div>
    </div>
    <div class="footerSecond">
      <div>
        Warranty
      </div>
      <div>
        Terms of Service
      </div>
      <div>
        Privacy Policy
      </div>
    </div>
  </footer>
</body>

</html>
