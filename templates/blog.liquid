{% comment %} {% paginate blog.articles by 5 %}

<h1>{{ blog.title }}</h1>
{% for article in blog.articles %}
  <div>
    <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
    {{ article.author }} @ {{ article.created_at }}
    <div>
      {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
      {% else %}
        <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
      {% endif %}
    </div>
  </div>
{% endfor %}

{% if paginate.pages > 1 %}
  {{ paginate | default_pagination }}
{% endif %}

{% endpaginate %} {% endcomment %}
<div style="padding: 0 5% 0 5%">
  <h1 class="outline" style="color: #B39457;">Learn From The Pros</h1>
  <div class="abmassadorHeaderContent">
    <h3 >The most important thing we build is relationships. We have teamed up with barbecue experts around the world to represent our products.  Join us as we follow their journey: cooking with fire, storytelling, and adventure.</h3>
  </div>
</div>
<div class='blogPosts'>
  {% for article in blog.articles %}
    <div>
      <div>
        {% comment %} {{ product.price | money }} {% endcomment %}
        {% comment %} {% unless product.available %}<br><strong>sold out</strong>{% endunless %} {% endcomment %}
        <div>
          <a href="{{ article.url | within: collection }}">
            <img style="width: 480px; height: 480px;" class="lazyload productImages blogPhotoPage" data-src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.featured_image.alt | escape }}">
          </a>
        </div>
      </div>
      <div class="blogPostBorder">
        <a style="color: #B39457;" href="{{ article.url }}">{{ article.title | split: '~section2~' | first }}</a>
        <br>
        <a href="{{ article.url }}">{{ article.title | split: '~section2~' | last }}</a>
      </div>
    </div>
  {% else %}
    <p>no matches</p>
  {% endfor %}
</div>