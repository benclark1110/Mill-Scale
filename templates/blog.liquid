{% comment %} {% paginate blog.articles by 5 %}

<h1>{{ blog.title }}</h1>
{% for article in blog.articles %}
  <div>
    <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
    {{ article.author }} @ {{ article.created_at }}
    <div>
      {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
      {% else %}
        <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
      {% endif %}
    </div>
  </div>
{% endfor %}

{% if paginate.pages > 1 %}
  {{ paginate | default_pagination }}
{% endif %}

{% endpaginate %} {% endcomment %}

<h1>{{ blog.title }}</h1>
<div class='collection'>
  {% for article in blog.articles %}
    <div>
      <div>
        {% comment %} {{ product.price | money }} {% endcomment %}
        {% comment %} {% unless product.available %}<br><strong>sold out</strong>{% endunless %} {% endcomment %}
        <div>
          <a href="{{ article.url | within: collection }}">
            <img class="lazyload productImages" data-src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.featured_image.alt | escape }}">
          </a>
        </div>
      </div>
      <div class="productBorder">
        <a style="color: #B39457;" href="{{ article.url }}">{{ article.title }}</a>
      </div>
    </div>
  {% else %}
    <p>no matches</p>
  {% endfor %}
</div>