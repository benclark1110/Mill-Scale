<h1 style="color: #B39457;"class="collectionHeadings">{{ collection.description }}</h1>
<div class="collectionsHeader">
  {% for collection in collections %}
    {% unless collection.title == 'Popular Items' %}
      {% if collection.title == page_title %}
      <a class="united collectionTitles selected" href="{{ collection.url }}">{{ collection.title | escape }}</a>
      {% else %}
      <a class="united collectionTitles" href="{{ collection.url }}">{{ collection.title | escape }}</a>
      {% endif %}
    {% endunless %}
  {% endfor %}
</div>


<div class='collection'>
  {% for product in collection.products %}
    <div>
      <div>
        {% comment %} {{ product.price | money }} {% endcomment %}
        {% comment %} {% unless product.available %}<br><strong>sold out</strong>{% endunless %} {% endcomment %}
        <a href="{{ product.url | within: collection }}">
          <img style="width: 360px; height: 360px;"class="productImages" src="{{ product.featured_image.src | img_url: 'original' }}" alt="{{ product.featured_image.alt | escape }}">
        </a>
      </div>
      <div class="productBorder">
        <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
      </div>
    </div>
  {% else %}
    <p>no matches</p>
  {% endfor %}
</div>
